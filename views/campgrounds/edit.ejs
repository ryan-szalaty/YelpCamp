<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
	<h1 class="text-center display-3">
		Edit <strong><%= campground.name %></strong>
	</h1>
	</header>

<div class="container d-flex justify-content-flex-start">
	<form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control d-block my-2" type="text" value="<%= campground.name %>" name="campground[name]">
		</div>
		<div class="form-group">
			<input class="form-control d-block my-2" type="number" value="<%= campground.price %>" 
				   name="campground[price]" min="0.01" step="0.01">
		</div>
		<div class="form-group">
			<input class="form-control d-block my-2" type="text" value="<%= campground.image %>" name="campground[image]">
		</div>
		<div class="form-group">
			<input class="form-control d-block my-2" type="text" value="<%= campground.description %>" name="campground[description]">
		</div>
		<div class="form-group">
			<button class="d-block btn btn-lrg btn-info btn-block my-2" type="submit">
				Update
			</button>
		</div>
		<div class="form-group">
			<a href="/campgrounds/<%= campground._id %>">Return to campground</a>
		</div>
	</form>
</div>
	
</div> 

<%- include("../partials/footer") %>